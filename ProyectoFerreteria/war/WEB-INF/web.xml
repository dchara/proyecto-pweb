<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<servlet>
		<servlet-name>ProyectoFerreteria</servlet-name>
		<servlet-class>episunsa.ProyectoFerreteriaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProyectoFerreteria</servlet-name>
		<url-pattern>/proyectoferreteria</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GuardarProducto</servlet-name>
		<servlet-class>episunsa.GuardarProducto</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GuardarProducto</servlet-name>
		<url-pattern>/guardarproducto</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ListProducto</servlet-name>
		<servlet-class>episunsa.ListProducto</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListProducto</servlet-name>
		<url-pattern>/listproducto</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>BuscarProducto</servlet-name>
		<servlet-class>episunsa.BuscarProducto</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BuscarProducto</servlet-name>
		<url-pattern>/buscarproducto</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>BuscarUsuario</servlet-name>
		<servlet-class>episunsa.BuscarUsuario</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BuscarUsuario</servlet-name>
		<url-pattern>/buscarusuario</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ListUsuario</servlet-name>
		<servlet-class>episunsa.ListUsuario</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListUsuario</servlet-name>
		<url-pattern>/listusuario</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SaveUsuario</servlet-name>
		<servlet-class>episunsa.SaveUsuario</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SaveUsuario</servlet-name>
		<url-pattern>/saveusuario</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
